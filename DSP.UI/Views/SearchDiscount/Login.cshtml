@model DSP.ViewModel.LoginViewModel
@{
    ViewBag.Title = "Login";
    var config = DSP.Helper.ApplicationVariable.Config.LoginPage;
}

<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                @config.LoginPageHeading.Value
            </div>
            <div class="panel-body">

                @using(Html.BeginForm("Login","SearchDiscount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {                                    
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-6">                            
                            @Html.Label(string.Empty, config.LoginFieldLabel.Value, new{@class="label-setting", @for="EmpId"})
                        </div>
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                            
                            @Html.TextBoxFor(model => model.EmpId, new {@class="form-control input-setting", placeholder=@config.LoginFieldPlaceholder.Value, required="required", autocomplete="off", autofocus="true"})
                            @Html.ValidationMessageFor(model => model.EmpId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                            <input type="submit" class="btn btn-danger redBtn pull-right" value="@config.LoginButtonValue.Value" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>