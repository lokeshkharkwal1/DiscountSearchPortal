@model DSP.UI.Models.LoginViewModel
@{
    ViewBag.Title = "Discount Search Portal";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                Discount Eligibility
            </div>
            <div class="panel-body">

                @using(Html.BeginForm("Login","SearchDiscount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {                                    
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-6">                            
                            @Html.LabelFor(model=>model.UserId, new{@class="label-setting"})
                        </div>
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                            
                            @Html.TextBoxFor(model => model.UserId, new {@class="form-control input-setting", placeholder="Employee Id", required="required", autocomplete="off"})
                            @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                            <input type="submit" class="btn btn-danger redBtn pull-right" value="Login" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>