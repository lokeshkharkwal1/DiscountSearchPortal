@model DSP.UI.Models.SearchViewModel
@{
    ViewBag.Title = "Search";
}


<div class="row">
    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">

            <div class="panel-heading">
                Discount Eligibility
                <span class="pull-right">
                    @User.Identity.Name
                </span>
            </div>

            <div class="panel-body">
                @using(Html.BeginForm("Login","SearchDiscount", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-2">                            
                            @Html.LabelFor(model => model.AssociateNumber, new { @class="control-label label-setting"})
                        </div>
                        <div class="col-sm-10 col-sm-offset-2">
                            <div class="row">
                                <div class="col-xs-8">
                                    @Html.TextBoxFor(model => model.AssociateNumber, new { placeholder = "Associate Number", @class = "form-control input-setting", required = "required", autocomplete = "off" })
                                    @Html.ValidationMessageFor(model => model.AssociateNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-xs-4 ellipsis-overflow">
                                    <h5>
                                        Deepak sharma lokesh and again lokesh
                                    </h5>
                                </div>
                            </div>

                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-2">
                            <div class="row">
                                <div class="col-xs-10 col-xs-offset-2">
                                    <input type="submit" class="btn btn-danger redBtn pull-right" value="Verify Discount Status"/>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="panel panel-success" id="searchPanel" style="">
                    <div class="panel-heading">
                        Searched Result.
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <label class="label-setting" for="name">Preferred Name:</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <div class="span-text">
                                            <span>John</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <label class="label-setting" for="location">Location:</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <div class="span-text">
                                            <span>501 CA - TORRID BREA</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-4">
                                        <label class="label-setting" for="discountEligibility">Eligible for Discount?:</label>
                                    </div>
                                    <div class="col-xs-8">
                                        <div class="span-text">
                                            <span>YES</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                
            </div>

        </div>
    </div>
</div>