@using DSP.Helper;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DSP</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />  
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:@ApplicationVariable.GetBrandConfig().UiLogoAndBanner.BackgroundColor.Value">
        <div class="container-fluid">
            <div class="primary-logo">
                <a href="#">
                    <img alt="Hot Topic" src="@Url.Content(ApplicationVariable.GetBrandConfig().UiLogoAndBanner.BrandLogoPath.Value)" title="Discount Seach Portal">
                </a>
            </div>
        </div>
    </div>

    <div>
        <div>
            <a href="#">
                <img class="banner-setting" alt="Hot Topic" src="@Url.Content(ApplicationVariable.GetBrandConfig().UiLogoAndBanner.BrandBannerPath.Value)">
            </a>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer class="text-center">
            <p>Copy Right &copy; @DateTime.Now.Year</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
